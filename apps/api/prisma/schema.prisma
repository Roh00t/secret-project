generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String?
  role      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Venue {
  id        String   @id @default(uuid())
  name      String
  address   String?
  hazards   VenueHazard[]
  submissions RAWSubmission[]
  incidents Incident[]
  createdAt DateTime @default(now())
}

model RAWTemplate {
  id        String   @id @default(uuid())
  title     String
  submissions RAWSubmission[]
  createdAt DateTime @default(now())
}

model RAWSubmission {
  id        String   @id @default(uuid())
  template  RAWTemplate @relation(fields: [templateId], references: [id])
  templateId String
  venue     Venue @relation(fields: [venueId], references: [id])
  venueId   String
  answers   RAWAnswer[]
  createdAt DateTime @default(now())
}

model RAWAnswer {
  id        String @id @default(uuid())
  submission RAWSubmission @relation(fields: [submissionId], references: [id])
  submissionId String
  question  String
  value     String
}

model VenueHazard {
  id        String @id @default(uuid())
  venue     Venue @relation(fields: [venueId], references: [id])
  venueId   String
  description String
  active    Boolean @default(true)
  issues    HazardIssue[]
}

model HazardIssue {
  id        String @id @default(uuid())
  hazard    VenueHazard @relation(fields: [hazardId], references: [id])
  hazardId  String
  status    String
  createdAt DateTime @default(now())
}

model Incident {
  id        String @id @default(uuid())
  venue     Venue @relation(fields: [venueId], references: [id])
  venueId   String
  description String
  createdAt DateTime @default(now())
}

model AuditLog {
  id        String @id @default(uuid())
  entity    String
  entityId  String
  action    String
  actorId   String?
  timestamp DateTime @default(now())
}
